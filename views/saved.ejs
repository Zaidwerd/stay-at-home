<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Saved Favorites</title>
  <link rel='stylesheet' href='/css/normalize.css'>
  <link rel='stylesheet' href='/css/main.css'>
</head>
<body>
  <h1>Welcome <%= user.firstName %>!</h1>
    <a href="/generator">SEARCH</a>
    <form action="/auth?_method=DELETE" method="post">
      <input type="submit" value="Logout">
    </form>

<div class='saved'>
  <% favorites.forEach((a) => {%>
    <div class='savedData'>
      <h2><%= a.Name %></h2>
      <h4><%= a.movie %></h4>
      <h4><a href='<%= a.recipe %>'><%= a.recipe %></a></h4>
      <br>
      <a href="/saved/edit/<%= a._id %>">Edit</a>
      <form action='/saved/<%= a._id %>?_method=DELETE' method='POST'>
      <input type='submit' value='Delete'>
      </form>
    </div>
  <% }); %>
</div>

</body>
</html>
