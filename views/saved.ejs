<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Saved Favorites</title>
  <link rel='stylesheet' href='/css/normalize.css'>
  <link rel='stylesheet' href='/css/main.css'>
</head>
<body class="savedBody">
  <h1 class="savedWelcome">Welcome <%= user.firstName %>!</h1>
    <a class="savedSearch" href="/generator">SEARCH</a>
    <form class="savedLogout" action="/auth?_method=DELETE" method="post">
      <input type="submit" value="Logout">
    </form>

<div class="savedContainer">
  <% favorites.forEach((a) => {%>
    <div class="savedItem">
      <h2 class="savedData"<%= a.Name %></h2>
      <h4 class="savedData"><%= a.movie %></h4>
      <h4 class="savedData"><a class="savedrecipe" href='<%= a.recipe %>'><%= a.recipe %></a></h4>
      <br>
      <a class="savedEdit" href="/saved/edit/<%= a._id %>">Edit</a>
      <form action='/saved/<%= a._id %>?_method=DELETE' method='POST'>
      <input type='submit' value='Delete'>
      </form>
    </div>
  <% }); %>
</div>

</body>
</html>
