<!DOCTYPE= html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Movie and Recipe Generator</title>
  <link rel='stylesheet' href='/css/normalize.css'>
  <link rel='stylesheet' href='/css/main.css'>
</head>
<body>
<header>

<a class='gNav' href='/'>HOME</a>
<a class='gNav' href='/saved'>SAVED</a>

</header>

<h1>Movie and Recipe Generator</h1>

<h1>Welcome</h1>
<form action="/generator" method="get" accept-charset="utf-8">
 <input type="text" name="show_cast" placeholder="Enter a actor">
 <input type="text" name="ingredients" placeholder="Enter ingredients">
    <input type="submit" value="Search">
</form>

<form action='/saved' method='post'>

<div class='flexboxContainer'>

  <fieldset id='group1'>
  <% for(let i = 0; i < 3 && i < movies.length; i++) { %>

    <div class='flexboxItem'>
      <img src='<%= movies[i].poster %>' onerror="this.src='images/noposter.jpg'">
      <div class='movieContainer'>
        <h4><%= movies[i].show_title %></h4>
        <div><%= movies[i].category %></div>
        <div><%= movies[i].summary %></div>
      </div>
        <input type='hidden' name='saved[MoviePoster]' value='<%= movies[i].poster %>'>
        <input type='hidden' name='saved[MovieTitle]' value='<%= movies[i].show_title %>'>
        <input type='radio' name='<%= movies[i].show_title %>' value="<%= i %>-movie">Add<br>
    </div>

  <% }; %>
  </fieldset>

<br><br>
<fieldset id='group2'>

  <% for(let i = 0; i< 3 && i < recipe.length; i++) { %>
    <div class='flexboxItem2'>
      <h3><a href'<%= recipe[i].href %>'><%= recipe[i].title %></a></h3>
      <p><%= recipe[i].ingredients %></p>
      <input type='hidden' name='saved[RecipeTitle]' value='<%= recipe[i].title %>'>
      <input type='hidden' name='saved[RecipeLink]' value='<%= recipe[i].href %>'>
      <input type='radio' name='<%= recipe[i].title %>' value="<%= i %>-recipe">Add<br>
  </div>
  <% }; %>
</fieldset>
</div>

  <input type="text" name="saved[Name]" placeholder="enter combo nickname"><br>
  <input type='submit' value='Save'>
</form>

</body>
</html>

